      <span class="protocol-tag">https://</span>
      <input type="text" id="urlInput" class="url-input" placeholder="subdomain" autocomplete="off" spellcheck="false">
      <select class="domain-select" id="domainExt">
          <option value=".page.live">.page.live</option>
          <option value=".elite.sh">.elite.sh</option>
          <option value=".drop.tech">.drop.tech</option>
          <option value=".cloud.io">.cloud.io</option>
      </select>
    </div>
    <div id="statusMsg"></div>

    <div id="uploadView">
      <div class="drop-zone" id="dropZone">
        <div style="font-size: clamp(24px, 8vw, 32px);">ðŸ’Ž</div>
        <div style="font-weight: 700; margin-top: 10px;">Drop or Select Source</div>
        <input type="file" id="fileInput" hidden>
      </div>
    </div>

    <div id="fileInfo" class="hidden">
      <div class="file-pill">
        <div id="fileName" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 80%;"></div>
        <div onclick="resetAll()" style="color: var(--error); cursor: pointer; font-weight: 900; padding: 5px;">âœ•</div>
      </div>
    </div>

    <button class="deploy-btn" id="deployBtn" disabled onclick="executeDeploy()">
      PROCEED TO DEPLOY
    </button>
  </div>

  <div id="successPanel" class="hidden">
    <div style="color: var(--success); font-weight: 800; font-size: 10px; margin-bottom: 10px;">LIVE ON NETWORK</div>
    <a href="#" id="finalLink" target="_blank" style="color: #fff; text-decoration: none; font-family: 'JetBrains Mono'; font-size: clamp(13px, 4vw, 16px); word-break: break-all;"></a>
    <button onclick="resetAll()" style="display: block; width: 100%; margin-top: 20px; background: transparent; border: 1px solid var(--text-dim); color: var(--text-dim); padding: 10px; border-radius: 10px; cursor: pointer;">DEPLOY ANOTHER</button>
  </div>
</div>

<script>
const urlInput = document.getElementById('urlInput');
const fileInput = document.getElementById('fileInput');
const deployBtn = document.getElementById('deployBtn');
const statusMsg = document.getElementById('statusMsg');
const domainSelect = document.getElementById('domainExt');
const dropZone = document.getElementById('dropZone');

// Local Storage for demo domain check
const getDb = () => JSON.parse(localStorage.getItem('elite_domains') || '[]');

function validate() {
    let val = urlInput.value.toLowerCase().replace(/[^a-z0-9-]/g, '');
    urlInput.value = val;

    if(val.length < 3) {
        statusMsg.innerText = "";
        deployBtn.disabled = true;
        return;
    }

    const isTaken = getDb().includes(val + domainSelect.value);
    if(isTaken) {
        statusMsg.innerText = "Ã— TAKEN";
        statusMsg.className = "text-error";
        deployBtn.disabled = true;
    } else {
        statusMsg.innerText = "âœ“ AVAILABLE";
        statusMsg.className = "text-success";
        if(fileInput.files.length > 0) deployBtn.disabled = false;
    }
}

// Event Listeners
urlInput.addEventListener('input', validate);
domainSelect.addEventListener('change', validate);

// Trigger file input click
dropZone.onclick = () => fileInput.click();

// Drag & Drop Handlers
['dragover', 'dragleave', 'drop'].forEach(evt => {
    dropZone.addEventListener(evt, (e) => {
        e.preventDefault();
        e.stopPropagation();
    });
});

dropZone.addEventListener('dragover', () => dropZone.classList.add('dragover'));
dropZone.addEventListener('dragleave', () => dropZone.classList.remove('dragover'));

dropZone.addEventListener('drop', (e) => {
    dropZone.classList.remove('dragover');
    const files = e.dataTransfer.files;
    if(files.length > 0) {
        fileInput.files = files;
        handleFileSelect();
    }
});

fileInput.onchange = handleFileSelect;

function handleFileSelect() {
    if(!fileInput.files[0]) return;
    document.getElementById('fileName').innerText = "ðŸ“„ " + fileInput.files[0].name;
    document.getElementById('uploadView').classList.add('hidden');
    document.getElementById('fileInfo').classList.remove('hidden');
    validate();
}

function resetAll() {
    urlInput.value = '';
    fileInput.value = '';
    document.getElementById('mainForm').classList.remove('hidden');
    document.getElementById('successPanel').classList.add('hidden');
    document.getElementById('uploadView').classList.remove('hidden');
    document.getElementById('fileInfo').classList.add('hidden');
    validate();
}

function executeDeploy() {
    const fullDomain = urlInput.value + domainSelect.value;
    deployBtn.disabled = true;
    deployBtn.classList.add('deploying');
    
    let steps = ["UPLOADING...", "OPTIMIZING...", "PROPAGATING...", "LIVE!"];
    let i = 0;
    
    let timer = setInterval(() => {
        deployBtn.innerText = steps[i];
        i++;
        if(i >= steps.length) {
            clearInterval(timer);
            const db = getDb();
            db.push(fullDomain);
            localStorage.setItem('elite_domains', JSON.stringify(db));
            
            document.getElementById('mainForm').classList.add('hidden');
            document.getElementById('finalLink').innerText = "https://" + fullDomain;
            document.getElementById('finalLink').href = "https://" + fullDomain;
            document.getElementById('successPanel').classList.remove('hidden');
            deployBtn.classList.remove('deploying');
        }
    }, 800);
}
</script>

</body>
</html>
