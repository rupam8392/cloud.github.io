<div class="card">
  <div class="badge">STATIC</div>

  <h1>Pages<span>Drop</span></h1>
  <p class="subtitle">Modern Static Hosting Interface</p>

  <div id="form">
    <div class="label">Project URL</div>
    <div class="url-box">
      <span>https://</span>
      <input id="siteName" placeholder="my-project">
    </div>

    <div class="drop-zone" id="dropZone">
      <strong>Select Project File</strong><br>
      <small>HTML / ZIP / Any static file</small>
      <input type="file" id="fileInput" hidden>
    </div>

    <button id="deployBtn" disabled>DEPLOY PROJECT</button>
  </div>

  <div id="success" class="success-box hidden">
    <strong style="color:var(--success)">Deployment Successful</strong>
    <div id="finalUrl" style="margin-top:10px;font-family:'JetBrains Mono',monospace;"></div>
    <small>This interface represents a static deployment workflow.</small>
    <button onclick="location.reload()" class="active">DEPLOY NEW PROJECT</button>
  </div>
</div>

<script>
const siteName=document.getElementById("siteName");
const fileInput=document.getElementById("fileInput");
const dropZone=document.getElementById("dropZone");
const deployBtn=document.getElementById("deployBtn");

dropZone.onclick=()=>fileInput.click();

function validate(){
  deployBtn.disabled=!(siteName.value.length>2 && fileInput.files.length>0);
  deployBtn.className=deployBtn.disabled?"":"active";
}

siteName.oninput=validate;

fileInput.onchange=()=>{
  dropZone.innerHTML="ðŸ“„ "+fileInput.files[0].name;
  validate();
};

deployBtn.onclick=()=>{
  deployBtn.classList.add("deploying");
  deployBtn.innerText="Deploying...";
  setTimeout(()=>{
    document.getElementById("form").classList.add("hidden");
    document.getElementById("success").classList.remove("hidden");
    document.getElementById("finalUrl").innerText=
      location.origin+"/"+siteName.value;
  },2000);
};
</script>

